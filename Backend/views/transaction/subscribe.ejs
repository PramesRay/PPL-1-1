<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Subscribe</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }
        button {
            font-size: 18px;
            padding: 10px 20px;
            margin: 0 10px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div>
        <button onclick="subscribe(1)">Subscribe Level 1</button>
        <button onclick="subscribe(2)">Subscribe Level 2</button>
        <button onclick="subscribe(3)">Subscribe Level 3</button>
    </div>

    <script>
        async function subscribe(levelId) {
            try {
                // Step 1: Create transaction
                const createTransactionResponse = await fetch('/transactions/', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        metode_pembayaran: 'midtrans', // Assuming you're using Midtrans
                        level_id: levelId
                    })
                });
                const transactionData = await createTransactionResponse.json();
                
                if (transactionData.error) {
                    throw new Error(transactionData.message || 'Error creating transaction');
                }

                // Step 2: Get transaction token
                const getTokenResponse = await fetch('/get-transaction-token/', {
                    method: 'GET'
                });
                const tokenData = await getTokenResponse.json();

                if (tokenData.error) {
                    throw new Error(tokenData.message || 'Error getting transaction token');
                }

                // Step 3: Redirect to payment page
                window.location.href = tokenData.redirect_url;

            } catch (error) {
                console.error('Error:', error);
                alert('Error: ' + error.message);
            }
        }
    </script>
</body>
</html>